<h1>Add New Photo</h1>

<%= form_with(model: @photo, local: true, html: { multipart: true }) do |form| %>
  <% if @photo.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
      <ul>
        <% @photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :caption %>
    <%= form.text_area :caption, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add photo", class: "btn btn-primary" %>
    <%= link_to "Cancel", photos_path, class: "btn btn-secondary" %>
  </div>
<% end %> 

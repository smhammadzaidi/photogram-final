<div class="photo-detail">
  <div class="photo-header">
    <h2><%= link_to @photo.owner.username, user_path(@photo.owner) %></h2>
    <% if current_user == @photo.owner %>
      <div class="actions">
        <%= link_to "Edit", edit_photo_path(@photo), class: "btn btn-sm btn-secondary" %>
        <%= link_to "Delete this photo", photo_path(@photo), method: :delete, data: { confirm: "Are you sure you want to delete this photo?" }, class: "btn btn-sm btn-danger" %>
        <%= button_to "Delete this photo", photo_path(@photo), method: :delete, data: { confirm: "Are you sure you want to delete this photo?" }, class: "btn btn-sm btn-danger" %>
      </div>
    <% end %>
  </div>
  
  <div class="photo-image">
    <% if @photo.image.attached? %>
      <%= image_tag @photo.image, class: "img-fluid" %>
    <% else %>
      <p>No image attached</p>
    <% end %>
  </div>
  
  <div class="photo-info">
    <p><strong>Caption:</strong> <%= @photo.caption %></p>
    <p><strong>Posted:</strong> <%= time_ago_in_words(@photo.created_at) %> ago</p>
  </div>
  
  <% if current_user == @photo.owner %>
    <div class="update-photo-form">
      <h3>Update photo</h3>
      <%= form_with(model: @photo, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :caption %>
          <%= form.text_area :caption, class: "form-control" %>
        </div>
        <div class="actions">
          <%= form.submit "Update Photo", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <div class="photo-actions">
    <% if user_signed_in? %>
      <% if @photo.liked_by?(current_user) %>
        <%= link_to "Unlike", like_path(@photo.like_by(current_user)), method: :delete, class: "btn btn-sm btn-danger" %>
      <% else %>
        <%= form_with(model: Like.new, local: true) do |form| %>
          <%= form.hidden_field :photo_id, value: @photo.id %>
          <%= form.hidden_field :fan_id, value: current_user.id %>
          <%= form.submit "Like", class: "btn btn-sm btn-primary" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  
  <div class="comments-section">
    <h3>Comments (<%= @photo.comments.count %>)</h3>
    
    <% if user_signed_in? %>
      <div class="comment-form">
        <%= form_with(model: @comment, local: true) do |form| %>
          <%= form.hidden_field :photo_id, value: @photo.id %>
          <%= form.hidden_field :author_id, value: current_user.id %>
          <div class="form-group">
            <%= form.text_area :body, class: "form-control", placeholder: "Add a comment...", required: true %>
          </div>
          <%= form.submit "Post Comment", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
    
    <div class="comments-list">
      <% if @comments.any? %>
        <% @comments.each do |comment| %>
          <div class="comment">
            <div class="comment-header">
              <strong><%= link_to comment.author.username, user_path(comment.author) %></strong>
              <small><%= time_ago_in_words(comment.created_at) %> ago</small>
              <% if current_user == comment.author %>
                <%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </div>
            <div class="comment-body">
              <%= comment.body %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>No comments yet.</p>
      <% end %>
    </div>
  </div>
</div>

<div class="back-link">
  <%= link_to "Back to Photos", photos_path, class: "btn btn-secondary" %>
</div> 

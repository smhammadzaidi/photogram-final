<h1>Users</h1>

<div class="users-container">
  <% if @users.any? %>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to user.username, user_path(user) %></h5>
              <p class="card-text">
                <% if user.private? %>
                  <span class="badge badge-secondary">Private</span>
                <% else %>
                  <span class="badge badge-success">Public</span>
                <% end %>
              </p>
              <p class="card-text">Photos: <%= user.photos.count %></p>
              <p class="card-text">Followers: <%= user.followers.count %></p>
              <p class="card-text">Following: <%= user.following.count %></p>
              
              <% if user_signed_in? && current_user != user %>
                <% if current_user.following.include?(user) %>
                  <% follow_request = current_user.sent_follow_requests.find_by(recipient: user) %>
                  <%= link_to "Unfollow", follow_request_path(follow_request), method: :delete, class: "btn btn-sm btn-danger" %>
                <% elsif current_user.sent_follow_requests.pending.exists?(recipient: user) %>
                  <span class="badge badge-warning">Request Pending</span>
                <% else %>
                  <%= form_with(model: FollowRequest.new, local: true) do |form| %>
                    <%= form.hidden_field :recipient_id, value: user.id %>
                    <%= form.submit "Follow", class: "btn btn-sm btn-primary" %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No users found.</p>
  <% end %>
</div> 

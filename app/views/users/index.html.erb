<h1>Users</h1>

<div class="users-container">
  <% if @users.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Private</th>
          <th>Photos</th>
          <th>Followers</th>
          <th>Following</th>
          <% if user_signed_in? %>
            <th>Actions</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.username, user_path(user) %></td>
            <td><%= user.private? ? "Yes" : "No" %></td>
            <td><%= user.photos.count %></td>
            <td><%= user.followers.count %></td>
            <td><%= user.following.count %></td>
            <% if user_signed_in? && current_user != user %>
              <td>
                <% if current_user.following.include?(user) %>
                  <% follow_request = current_user.sent_follow_requests.find_by(recipient: user) %>
                  <%= link_to "Unfollow", follow_request_path(follow_request), method: :delete, class: "btn btn-sm btn-danger" %>
                <% elsif current_user.sent_follow_requests.pending.exists?(recipient: user) %>
                  <span>Request sent</span>
                  <%= link_to "Cancel", follow_request_path(current_user.sent_follow_requests.find_by(recipient: user)), method: :delete %>
                <% else %>
                  <%= form_with(model: FollowRequest.new, local: true) do |form| %>
                    <%= form.hidden_field :recipient_id, value: user.id %>
                    <%= form.submit "Follow", class: "btn btn-sm btn-primary" %>
                  <% end %>
                <% end %>
              </td>
            <% elsif user_signed_in? %>
              <td>You</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No users found.</p>
  <% end %>
</div> 
